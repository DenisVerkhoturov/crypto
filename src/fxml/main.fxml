<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MainController">

    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

   <top>
       <AnchorPane>
          <children>
              <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  </columnConstraints>
                  <rowConstraints>
                      <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS" />
                      <RowConstraints minHeight="0.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="20.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                 <children>
                     <JFXComboBox fx:id="action" promptText="%cipher_action" GridPane.halignment="CENTER" GridPane.hgrow="SOMETIMES" GridPane.rowIndex="1" />
                     <JFXComboBox fx:id="language" promptText="%source_language" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                     <JFXComboBox fx:id="algorithm" promptText="%cipher_algorithm" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                     <JFXTextField fx:id="cipherKey" promptText="%cipher_key" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
                     <JFXButton buttonType="RAISED" ripplerFill="#405aa8" text="RU" GridPane.columnIndex="3" GridPane.halignment="RIGHT" />
                 </children>
              </GridPane>
          </children>
       </AnchorPane>
   </top>
   <left>
       <AnchorPane BorderPane.alignment="CENTER">
          <children>
              <JFXTextArea promptText="Исходный текст" scrollLeft="1.0" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
          </children>
       </AnchorPane>
   </left>
   <right>
       <AnchorPane BorderPane.alignment="CENTER">
          <children>
              <JFXTextArea promptText="Посе обработки" scrollLeft="1.0" wrapText="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
          </children>
       </AnchorPane>
   </right>
</BorderPane>
