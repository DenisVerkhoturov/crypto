<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <top>
       <AnchorPane>
           <GridPane AnchorPane.bottomAnchor="0.0"
                     AnchorPane.leftAnchor="0.0"
                     AnchorPane.rightAnchor="0.0"
                     AnchorPane.topAnchor="0.0">
               <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
               </columnConstraints>
               <rowConstraints>
                   <RowConstraints minHeight="10.0" valignment="CENTER" vgrow="ALWAYS"/>
                   <RowConstraints minHeight="0.0" vgrow="SOMETIMES"/>
                   <RowConstraints minHeight="20.0" vgrow="SOMETIMES"/>
               </rowConstraints>
               <JFXComboBox promptText="Действие"
                            GridPane.halignment="CENTER"
                            GridPane.hgrow="SOMETIMES"
                            GridPane.rowIndex="1"/>
               <JFXComboBox promptText="Язык текста"
                            GridPane.columnIndex="1"
                            GridPane.halignment="CENTER"
                            GridPane.rowIndex="1"/>
               <JFXComboBox promptText="Алгоритм"
                            GridPane.columnIndex="2"
                            GridPane.halignment="CENTER"
                            GridPane.rowIndex="1"/>
               <JFXTextField promptText="Ключ"
                             GridPane.columnIndex="3"
                             GridPane.halignment="CENTER"
                             GridPane.rowIndex="1"/>
               <JFXButton buttonType="RAISED"
                          ripplerFill="#405aa8"
                          text="RU"
                          GridPane.columnIndex="3"
                          GridPane.halignment="RIGHT"/>
           </GridPane>
       </AnchorPane>
   </top>
   <left>
       <AnchorPane BorderPane.alignment="CENTER">
           <JFXTextArea promptText="Исходный текст"
                        scrollLeft="1.0"
                        wrapText="true"
                        AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0"/>
       </AnchorPane>
   </left>
   <right>
       <AnchorPane BorderPane.alignment="CENTER">
           <JFXTextArea promptText="Посе обработки"
                        scrollLeft="1.0"
                        wrapText="true"
                        AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="0.0"
                        AnchorPane.rightAnchor="0.0"
                        AnchorPane.topAnchor="0.0"/>
       </AnchorPane>
   </right>
</BorderPane>
